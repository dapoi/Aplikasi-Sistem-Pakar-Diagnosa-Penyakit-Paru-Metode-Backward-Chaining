<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="SISTEM PAKAR DIAGNOSA PENYAKIT PARU-PARU"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:text="Pilih Penyakit yang Diduga"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        tools:ignore="InvalidId" />

    <AutoCompleteTextView
        android:id="@+id/autoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Pilih Penyakit"
        android:textColorHint="@color/white"
        android:textSize="20dp" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="IDENTIFIKASI"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:theme="@style/buttonstyle1"
            style="@style/Widget.AppCompat.Button" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Created by:"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luthfi Daffa Prabowo"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="201810225212"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

</LinearLayout>